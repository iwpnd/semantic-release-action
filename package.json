{
  "name": "@iwpnd/semantic-release-action",
  "version": "0.0.0",
  "description": "semantic release github action with shareable configuration",
  "main": "dist/index.cjs",
  "type": "module",
  "keywords": [
    "semantic-release",
    "action"
  ],
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iwpnd/semantic-release-action.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "B. Ramser <iwpnd@posteo.de>",
  "contributors": [],
  "license": "MIT",
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "postinstall": "yarn husky init",
    "prepublishOnly": "pinst --disable && yarn run build",
    "postpublish": "pinst --enable",
    "build": "find ./src -name '*.ts' -exec esbuild '{}' --bundle --outbase=src --outdir=dist --format=esm --platform=node \\;",
    "build:watch": "tsc --watch",
    "package": "yarn lint && yarn test && esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.cjs --format=cjs --sourcemap",
    "clean": "rimraf {dist,tsconfig.tsbuildinfo,yarn-error.log,coverage}",
    "lint": "eslint ./src",
    "test": "jest --runInBand --verbose --testMatch '**/*test.ts' --coverage",
    "format": "prettier --write src/{*.ts,**/*.ts}",
    "u": "yarn upgrade-interactive --latest",
    "coverage": "FILE=./coverage/lcov-report/index.html; test -f $FILE && open $FILE || echo 'no coverage yet, run yarn test'",
    "prepare": "husky"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/io": "^1.1.3",
    "semantic-release": "^24.2.6"
  },
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "12.0.0",
    "@semantic-release/npm": "13.1.1",
    "@semantic-release/release-notes-generator": "14.1.0",
    "@eslint/core": "0.17.0",
    "@eslint/js": "9.39.1",
    "@types/jest": "30.0.0",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "devmoji": "2.3.0",
    "esbuild": "0.25.12",
    "eslint": "9.39.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.6",
    "pinst": "3.0.0",
    "prettier": "3.6.2",
    "rimraf": "6.1.0",
    "ts-jest": "29.4.5",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "packageManager": "yarn@4.9.1"
}
